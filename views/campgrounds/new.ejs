<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">
			Create a new CodeBlog!
		</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Enter name" name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Enter image url" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Describe the experience here..." name="desc">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit!
					</button>
				</div>
				<a style="margin: 0 0 0 150px;" href="/campgrounds">Go Back</a>
			</form>
		</div>
	</div>
	
</div>



